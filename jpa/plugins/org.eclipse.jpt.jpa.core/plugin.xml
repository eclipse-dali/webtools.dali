					<adapt type="org.eclipse.core.resources.IResource">
						<reference definitionId="org.eclipse.jpt.jpa.reference.anyJpaFacetedReferencingProjects"/>
					</adapt>
	           	</with>
        	</enablement>
     	</deleteParticipant>
    </extension>
    
    
